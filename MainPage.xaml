<Page x:Class="KALD_Control.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:KALD_Control"
      xmlns:conv="using:KALD_Control.Converters"
      xmlns:models="using:KALD_Control.Models"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Page.Resources>
        <local:InterlockStatusConverter x:Key="InterlockStatusConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:ChargeStateConverter x:Key="ChargeStateConverter"/>
        <conv:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>
        <conv:LaserStateToColorConverter x:Key="LaserStateToColorConverter"/>
        <conv:LaserStateToStringConverter x:Key="LaserStateToStringConverter"/>
        <conv:EnergyToStringConverter x:Key="EnergyToStringConverter"/>
        <conv:WaveformToStringConverter x:Key="WaveformToStringConverter"/>
        <Style x:Key="DataCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="SubheaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Style>
        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="MetricUnitStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource SystemFillColorSuccessBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource SystemFillColorCriticalBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Margin="16,0" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE945;" FontSize="20" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" Margin="0,0,12,0"/>
                <TextBlock Text="KALD Laser Control System" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Connection Status Indicator -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0" VerticalAlignment="Center">
                <Border Width="12" Height="12" CornerRadius="6" Margin="0,0,8,0"
                        Background="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"/>
                <TextBlock Text="{Binding ConnectionStatus, Mode=OneWay}" 
                           FontSize="12" 
                           VerticalAlignment="Center"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" ZoomMode="Disabled" VerticalScrollBarVisibility="Auto">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Emergency Controls Strip -->
                <Border Grid.Row="0" 
                        Style="{StaticResource DataCardStyle}" 
                        Background="{ThemeResource SystemFillColorCriticalBrush}"
                        Margin="0,0,0,16"
                        Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE7BA;" Foreground="White" FontSize="20" Margin="0,0,12,0"/>
                            <TextBlock Text="LASER SAFETY CONTROLS" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       FontSize="16"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="EMERGENCY STOP" 
                                Command="{Binding StopCommand}"
                                Background="{ThemeResource SystemFillColorCriticalBrush}"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="20,12"
                                Margin="0,0,12,0"
                                CornerRadius="4"/>

                        <Button Grid.Column="2"
                                Content="DISARM" 
                                Command="{Binding DisarmCommand}"
                                Background="{ThemeResource SystemFillColorAttentionBrush}"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="20,12"
                                CornerRadius="4"/>
                    </Grid>
                </Border>

                <!-- System Status Overview -->
                <Border Grid.Row="1" Style="{StaticResource DataCardStyle}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- System State -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="System State" Style="{StaticResource SubheaderStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <Border Width="16" Height="16" CornerRadius="8" Margin="0,0,8,0"
                                        Background="{Binding DeviceData.LaserState, Converter={StaticResource LaserStateToColorConverter}, Mode=OneWay}"/>
                                <TextBlock Text="{Binding DeviceData.LaserState, Converter={StaticResource LaserStateToStringConverter}, Mode=OneWay}" 
                                           FontSize="18" FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Voltage Display -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Voltage" Style="{StaticResource SubheaderStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="{Binding DeviceData.ActualVoltage, Mode=OneWay}" 
                                           Style="{StaticResource MetricValueStyle}"/>
                                <TextBlock Text="V" Style="{StaticResource MetricUnitStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Energy Display -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Energy" Style="{StaticResource SubheaderStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="{Binding DeviceData.RunStatus.Energy, Converter={StaticResource EnergyToStringConverter}, Mode=OneWay}" 
                                           Style="{StaticResource MetricValueStyle}"/>
                                <TextBlock Text="J" Style="{StaticResource MetricUnitStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Shot Count -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Shot Count" Style="{StaticResource SubheaderStyle}"/>
                            <TextBlock Text="{Binding DeviceData.ShotCount, Mode=OneWay}" 
                                       Style="{StaticResource MetricValueStyle}"/>
                        </StackPanel>

                        <!-- Charge Voltage -->
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Charge Voltage" Style="{StaticResource SubheaderStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="{Binding DeviceData.ChargeState.MeasuredVolts, Mode=OneWay}" 
                                           Style="{StaticResource MetricValueStyle}"/>
                                <TextBlock Text="V" Style="{StaticResource MetricUnitStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Charge Done -->
                        <StackPanel Grid.Column="5">
                            <TextBlock Text="Charge Done" Style="{StaticResource SubheaderStyle}"/>
                            <TextBlock Foreground="{Binding DeviceData.ChargeState.ChargeDone, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"
                                       Text="{Binding DeviceData.ChargeState.ChargeDone, Converter={StaticResource BoolToYesNoConverter}, Mode=OneWay}" 
                                       Style="{StaticResource MetricValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Control Grid -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel: Connection & Basic Controls -->
                    <StackPanel Grid.Column="0" Margin="0,0,8,0" Spacing="16">
                        <!-- Connection Panel -->
                        <Border Style="{StaticResource DataCardStyle}">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Connection" Style="{StaticResource SectionHeaderStyle}"/>
                                <ComboBox Header="Serial Port" 
                                          ItemsSource="{Binding AvailablePorts}" 
                                          SelectedItem="{Binding SelectedPort, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch"/>
                                <ComboBox Header="Baud Rate" 
                                          ItemsSource="{Binding AvailableBaudRates}" 
                                          SelectedItem="{Binding SelectedBaudRate, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0"
                                            Content="Connect" 
                                            Command="{Binding ConnectCommand}"
                                            Style="{StaticResource AccentButtonStyle}"
                                            HorizontalAlignment="Stretch"/>
                                    <Button Grid.Column="1"
                                            Content="🔄" 
                                            Command="{Binding RefreshPortsCommand}"
                                            Margin="8,0"
                                            Width="40"/>
                                    <Button Grid.Column="2"
                                            Content="Disconnect" 
                                            Command="{Binding DisconnectCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            HorizontalAlignment="Stretch"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Basic Controls -->
                        <Border Style="{StaticResource DataCardStyle}">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Laser Control" Style="{StaticResource SectionHeaderStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Button Grid.Column="0" Grid.Row="0"
                                            Content="ARM" 
                                            Command="{Binding ArmCommand}"
                                            Style="{StaticResource SuccessButtonStyle}"
                                            Margin="0,0,4,4"/>
                                    <Button Grid.Column="1" Grid.Row="0"
                                            Content="DISARM" 
                                            Command="{Binding DisarmCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Margin="4,0,0,4"/>
                                    <Button Grid.Column="0" Grid.Row="1"
                                            Content="FIRE" 
                                            Command="{Binding FireCommand}"
                                            Style="{StaticResource DangerButtonStyle}"
                                            Margin="0,4,4,0"/>
                                    <Button Grid.Column="1" Grid.Row="1"
                                            Content="STOP" 
                                            Command="{Binding StopCommand}"
                                            Style="{StaticResource DangerButtonStyle}"
                                            Margin="4,4,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Voltage Control -->
                        <Border Style="{StaticResource DataCardStyle}">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Voltage Control" Style="{StaticResource SectionHeaderStyle}"/>
                                <NumberBox Header="Voltage Setpoint (V)"
                                           Value="{Binding VoltageSetpoint, Mode=TwoWay}"
                                           Minimum="0"
                                           Maximum="1000"
                                           HorizontalAlignment="Stretch"/>
                                <Button Content="Apply Voltage" 
                                        Command="{Binding ApplySettingsCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Middle Panel: Pulse Configuration -->
                    <StackPanel Grid.Column="1" Margin="8,0" Spacing="16">
                        <!-- Pulse Configuration -->
                        <Border Style="{StaticResource DataCardStyle}">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Pulse Configuration" Style="{StaticResource SectionHeaderStyle}"/>
                                <NumberBox Header="Frequency (Hz)"
                                           Value="{Binding FrequencySetpoint, Mode=TwoWay}"
                                           Minimum="1"
                                           Maximum="1000"
                                           HorizontalAlignment="Stretch"/>
                                <NumberBox Header="Pulse Width (μs)"
                                           Value="{Binding PulseWidth, Mode=TwoWay}"
                                           Minimum="1"
                                           Maximum="10000"
                                           HorizontalAlignment="Stretch"/>
                                <NumberBox Header="Total Shots"
                                           Value="{Binding TotalShots, Mode=TwoWay}"
                                           Minimum="1"
                                           Maximum="1000000"
                                           HorizontalAlignment="Stretch"/>
                                <ComboBox Header="Trigger Mode"
                                          ItemsSource="{Binding TriggerModes}"
                                          SelectedItem="{Binding SelectedTriggerMode, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch"/>
                                <ComboBox Header="Shot Mode"
                                          ItemsSource="{Binding ShotModes}"
                                          SelectedItem="{Binding SelectedShotMode, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch"/>
                                <Button Content="Apply Pulse Settings" 
                                        Command="{Binding ApplyPulseSettingsCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>

                        <!-- Delays Configuration -->
                        <Border Style="{StaticResource DataCardStyle}">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Laser Delays" Style="{StaticResource SectionHeaderStyle}"/>
                                <NumberBox Header="Delay 1 (μs)"
                                           Value="{Binding DeviceData.PulseConfig.Delay1, Mode=TwoWay}"
                                           Minimum="0"
                                           Maximum="65535"
                                           HorizontalAlignment="Stretch"/>
                                <NumberBox Header="Delay 2 (μs)"
                                           Value="{Binding DeviceData.PulseConfig.Delay2, Mode=TwoWay}"
                                           Minimum="0"
                                           Maximum="65535"
                                           HorizontalAlignment="Stretch"/>
                                <Button Content="Apply Delays" 
                                        Command="{Binding SendLaserDelaysCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>

                        <!-- Shutter Control -->
                        <Border Style="{StaticResource DataCardStyle}">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Shutter Control" Style="{StaticResource SectionHeaderStyle}"/>
                                <ComboBox Header="Shutter Mode"
                                          ItemsSource="{Binding ShutterModes}"
                                          SelectedItem="{Binding SelectedShutterMode, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch"/>
                                <ComboBox Header="Shutter State"
                                          ItemsSource="{Binding ShutterStates}"
                                          SelectedItem="{Binding SelectedShutterState, Mode=TwoWay}"
                                          HorizontalAlignment="Stretch"/>
                                <Button Content="Apply Shutter Settings" 
                                        Command="{Binding ApplyShutterSettingsCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right Panel: Safety Interlocks, Soft Start, Waveform -->
                    <StackPanel Grid.Column="2" Margin="8,0,0,0" Spacing="16">
                        <!-- Safety Interlocks -->
                        <Border Style="{StaticResource DataCardStyle}">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Safety Interlocks" Style="{StaticResource SectionHeaderStyle}"/>
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <StackPanel>
                                        <TextBlock Text="Power OK" 
                                                   Foreground="{Binding InterlockStatus.PowerOK, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"/>
                                        <TextBlock Text="Temperature OK" 
                                                   Foreground="{Binding InterlockStatus.TempOK, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"/>
                                        <TextBlock Text="Door OK" 
                                                   Foreground="{Binding InterlockStatus.DoorOK, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"/>
                                        <TextBlock Text="Water OK" 
                                                   Foreground="{Binding InterlockStatus.WaterOK, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Cover OK" 
                                                   Foreground="{Binding InterlockStatus.CoverOK, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"/>
                                        <TextBlock Text="Discharge Temp OK" 
                                                   Foreground="{Binding InterlockStatus.DischargeTempOK, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"/>
                                        <TextBlock Text="Over Voltage OK" 
                                                   Foreground="{Binding InterlockStatus.OverVoltageOK, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"/>
                                        <TextBlock Text="Over Temp OK" 
                                                   Foreground="{Binding InterlockStatus.OverTempOK, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"/>
                                    </StackPanel>
                                </StackPanel>
                                <Button Content="Apply Interlock Mask" 
                                        Command="{Binding SendInterlockMaskCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>

                        <!-- Soft Start Configuration -->
                        <Border Style="{StaticResource DataCardStyle}">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Soft Start" Style="{StaticResource SectionHeaderStyle}"/>
                                <ToggleSwitch Header="Enable Soft Start"
                                              IsOn="{Binding SoftStartEnabled, Mode=TwoWay}"/>
                                <NumberBox Header="Idle Setpoint (V)"
                                           Value="{Binding IdleSetpoint, Mode=TwoWay}"
                                           Minimum="0"
                                           Maximum="1000"
                                           HorizontalAlignment="Stretch"/>
                                <NumberBox Header="Ramp Count"
                                           Value="{Binding RampCount, Mode=TwoWay}"
                                           Minimum="0"
                                           Maximum="1000"
                                           HorizontalAlignment="Stretch"/>
                                <Button Content="Apply Soft Start" 
                                        Command="{Binding ApplySoftStartCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>

                        <!-- Waveform Analysis -->
                        <Border Style="{StaticResource DataCardStyle}">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Waveform Analysis" Style="{StaticResource SectionHeaderStyle}"/>
                                <ToggleSwitch Header="Enable Waveform"
                                              IsOn="{Binding WaveformEnabled, Mode=TwoWay}"/>
                                <Button Content="Request Waveform" 
                                        Command="{Binding RequestWaveformCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        HorizontalAlignment="Stretch"/>
                                <TextBlock Text="Waveform Data" Style="{StaticResource SubheaderStyle}"/>
                                <TextBlock Text="{Binding DeviceData.Waveform.Samples, Converter={StaticResource WaveformToStringConverter}, Mode=OneWay}"
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Log Panel -->
        <Border Grid.Row="2" 
                Style="{StaticResource DataCardStyle}" 
                Margin="24,16,24,24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Log" 
                           Style="{StaticResource SectionHeaderStyle}"/>
                <Button Grid.Row="0" Grid.Column="1"
                        Content="Clear Logs" 
                        Command="{Binding ClearLogsCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"/>

                <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" 
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled">
                    <TextBlock Text="{Binding LogText, Mode=OneWay}" 
                               FontFamily="Consolas" 
                               FontSize="11" 
                               TextWrapping="Wrap" 
                               Padding="12"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>